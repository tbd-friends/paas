@using Gamer.Menu.Website.Models

<table class="table">
    <thead>
    <tr>
        <th scope="col">Name</th>
        <th scope="col">Actions</th>
    </tr>
    </thead>
    <tbody>
    @{if( Menus.Any())
    {
        foreach (var menu in Menus)
        {
            <tr>
                <td>@menu.Name</td>
                <td>
                    <button>Edit</button>
                    <button>Delete</button>
                </td>
            </tr>
        }
    }
    else
    {
        <tr>
            <td>No menus found</td>
        </tr>
    }}
    </tbody>
</table>

@code {
    [Parameter]
    public List<Menu> Menus { get; set; }
}
