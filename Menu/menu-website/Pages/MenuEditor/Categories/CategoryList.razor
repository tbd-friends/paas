@using Gamer.Menu.Website.Models

<table class="table">
    <thead>
        <tr>
            <th scope="col">Name</th>
            <th scope="col">Actions</th>
        </tr>
    </thead>
    <tbody>
        @{if (Categories.Any())
            {
                foreach (var category in Categories)
                {
                    <tr>
                        <td>@category.Name</td>
                        <td>
                            <button>Edit</button>
                            <button>Delete</button>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td>No categories found</td>
                </tr>
            }}
    </tbody>
</table>

@code {
    [Parameter]
    public List<Category> Categories { get; set; }
}
